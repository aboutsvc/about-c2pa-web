        icon: 'tabler:mail',
      },
      {
        title: 'Call us',
        description: '+82 (10) 9273-0777',
        icon: 'tabler:headset',
      }
    ]}
    
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Steps2>

